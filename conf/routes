# Routes

# This file defines all application routes (Higher priority routes first)

# https://www.playframework.com/documentation/latest/ScalaRouting

# ~~~~

# An example controller showing a sample home page

# GET / controllers.HomeController.index()

GET     /greet                      com.surajgharat.conversionrates.controllers.ConversionRateController.greet()
GET     /rates                      com.surajgharat.conversionrates.controllers.ConversionRateController.getAllRates()
POST    /rates/get                  com.surajgharat.conversionrates.controllers.ConversionRateController.getRates()
POST    /rates/save                 com.surajgharat.conversionrates.controllers.ConversionRateController.saveRates()

# Map static resources from the /public folder to the /assets URL path
# GET     /assets/\*file      controllers.Assets.versioned(path="/public", file: Asset)
